include navItem

mixin navigation()
  nav.nav
    ul.nav__list
      +navItem('dashboard', 'icon-key-square', 'icon-chevron-right', 'Dashboard')
      +navItem('product', 'icon-d-square', 'icon-chevron-right', 'Product')
      +navItem('customers', 'icon-user-square', 'icon-chevron-right', 'Customers')
      +navItem('income', 'icon-wallet-money', 'icon-chevron-right', 'Income')
      +navItem('promote', 'icon-discount-shape', 'icon-chevron-right', 'Promote')
      +navItem('help', 'icon-message-question', 'icon-chevron-right', 'Help')
