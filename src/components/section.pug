include table.pug

mixin section()
  .section
    .section__main.customers.section__main-inactive
      .section__header
        .section__header-section__header-title-wrapper
          .section__header-title All Customers
          .section__header-subtitle Active Members
        .search
          search__label.search__search__label
            img.search__img(src='./assets/img/search.svg' alt='search')
            input.search__input(type='text' placeholder='Search')
    +table
      // * Footer
      footer.footer
        // * info
        .footer-info
          | Showing data 1 to 8 of 256K entries
        // * pagination
        .pagination
          button#prev.pagination__arrow
            svg.icon.icon-arrow-left
              use(xlink:href='#icon-arrow-left')
          button.pagination__button 1
          button.pagination__button.active 2
          button.pagination__button 3
          button.pagination__button 4
          button.pagination__button ...
          button.pagination__button 40
          button#next.pagination__arrow
            svg.icon.icon-arrow-right
              use(xlink:href='#icon-arrow-right')